{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Recommended voices for TTS",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "language": {
      "type": "string"
    },
    "voices": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "altNames": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "overrides": {
            "type": "string"
          },
          "language": {
            "type": "string"
          },
          "gender": {
            "type": "string",
            "enum": [
              "nonbinary",
              "female",
              "male"
            ]
          },
          "children": {
            "type": "boolean",
            "default": false
          },
          "rate": {
            "type": "number",
            "minimum": 0.1,
            "maximum": 10,
            "default": 1
          },
          "pitch": {
            "type": "number",
            "minimum": 0,
            "maximum": 2,
            "default": 1
          },
          "os": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "Android",
                "ChromeOS",
                "iOS",
                "iPadOS",
                "macOS",
                "Windows"
              ]
            }
          },
          "browser": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "ChromeDesktop",
                "Edge",
                "Firefox",
                "Safari"
              ]
            }
          },
          "preloaded": {
            "type": "boolean",
            "default": false
          }
        },
        "required": [
          "label",
          "name",
          "language"
        ]
      }
    }
  },
  "required": [
    "language",
    "voices"
  ]
}